<project name='xrobots:host:bin' default='dist' basedir='.'>
  <description>Build the grammar xrobots:host:bin </description>

  <property environment='env'/>
  <property name='jg' location='/project/melt3/People/sst/steve/silver/trunk/generated/'/>
  <property name='sh' location='/project/melt3/People/sst/steve/silver/trunk/'/>
  <property name='bin' location='${jg}/bin'/>
  <property name='src' location='${jg}/src'/>

  <path id='lib.classpath'>
    <fileset dir='${sh}/jars' includes='SilverRuntime.jar CopperRuntime.jar CopperCompiler.jar' />
  </path>

  <path id='src.classpath'>
    <pathelement location='${src}' />
  </path>

  <path id='compile.classpath'>
    <path refid='src.classpath'/>
    <path refid='lib.classpath'/>
  </path>

  <taskdef name='copper' classname='edu.umn.cs.melt.copper.ant.CopperAntTask' classpathref='lib.classpath'/>


  <target name='init'>

    <!-- Create the time stamp -->
    <tstamp>
      <format property='TIME' pattern='MM/dd/yyyy hh:mm aa'/>
    </tstamp>

    <mkdir dir='${bin}'/>
  </target>

  <target name='dist' depends='grammars'>

    <pathconvert refid='lib.classpath' pathsep=' ' property='man.classpath' />
    <jar destfile='xrobots.host.bin.jar' basedir='${bin}'>
       <include name='xrobots/abstractsyntax/*.class' />
       <include name='xrobots/host/bin/*.class' />
       <include name='xrobots/concretesyntax/*.class' />
       <include name='core/*.class' />
       <include name='xrobots/host/*.class' />
       <include name='xrobots/terminals/*.class' />
      <manifest>
       <attribute name='Main-Class' value='xrobots.host.bin.Main' />
       <attribute name='Class-Path' value='${man.classpath}' />
       <attribute name='Built-By' value='${user.name}' />
       <section name='version'>
         <attribute name='Specification-Version' value='' />
         <attribute name='Implementation-Version' value='${TIME}' />
       </section>
      </manifest>
    </jar>

  </target>

  <target name='grammars' depends='init, copper'>
      <javac debug='on' source='1.5' classpathref='compile.classpath' srcdir='${src}' destdir='${bin}' includeantruntime='false'>
       <include name='xrobots/abstractsyntax/*.java' />
       <include name='xrobots/host/bin/*.java' />
       <include name='xrobots/concretesyntax/*.java' />
       <include name='core/*.java' />
       <include name='xrobots/host/*.java' />
       <include name='xrobots/terminals/*.java' />
      </javac>
  </target>

  <target name='copper'>
    <copper fullClassName='xrobots.host.bin.Parser_xrobots_host_bin_parse' inputFile='${src}/xrobots/host/bin/Parser_xrobots_host_bin_parse.copper' outputFile='${src}/xrobots/host/bin/Parser_xrobots_host_bin_parse.java' skin='xml' warnUselessNTs='no' dump='true' dumpType='html' dumpOnlyOnError='true' dumpFile='Parser_xrobots_host_bin_parse.copperdump.html'/>
  </target>


</project>
